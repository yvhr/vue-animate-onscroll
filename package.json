{
  "name": "vue-animate-onscroll",
  "version": "2.0.0",
  "description": "A simple Vue directive that animates elements as they scroll into view.",
  "type": "module",
  "main": "./dist/vue-animate-onscroll.umd.cjs",
  "module": "./dist/vue-animate-onscroll.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-animate-onscroll.js",
      "require": "./dist/vue-animate-onscroll.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "dev": "vite --config vite.config.ts demo",
    "build:demo": "vite build --config vite.demo.config.ts",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "yev",
  "repository": {
    "type": "git",
    "url": "https://github.com/yvhr/vue-animate-onscroll"
  },
  "keywords": [
    "vue",
    "vue3",
    "scroll",
    "animate",
    "reveal"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.4.0",
    "vitest": "^2.1.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "vue": "^3.5.0"
  }
}
